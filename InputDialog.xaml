<Window x:Class="PROG_POE_3.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PromptText" Text="Enter value:" Grid.Row="0"/>
        <TextBox x:Name="AnswerTextBox" Grid.Row="1" Margin="0,5,0,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2">
            <Button Content="OK" IsDefault="True" Click="OkButton_Click" Width="60" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" Width="60"/>
        </StackPanel>
    </Grid>
</Window>